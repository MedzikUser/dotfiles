{
    "workbench.colorCustomizations": {
        // Color of editor active line number
        "editorLineNumber.activeForeground": "#ffffff",
        // Color of editor line numbers
        "editorLineNumber.foreground": "#777777",

        // Foreground color of inline hints
        "editorInlayHint.foreground": "#868686f0",
        // Background color of inline hints
        "editorInlayHint.background": "#3d3d3d48",

        // rust-analyzer types color
        // Foreground color of inline hints for types
        "editorInlayHint.typeForeground": "#fdb6fdf0",
        // Foreground color of inline hints for parameters
        "editorInlayHint.parameterForeground": "#fdb6fdf0",

        // GitLens blame color
        // https://github.com/gitkraken/vscode-gitlens/issues/1089#issuecomment-675109373
        "gitlens.trailingLineForegroundColor": "#575757f0",
    },
    "workbench.editor.showTabs": false,
    "workbench.startupEditor": "none",
    "workbench.sideBar.location": "right",
    "window.titleBarStyle": "custom",
    "window.title": "${activeEditorMedium}${separator}${rootName} ${dirty}",
    "editor.tokenColorCustomizations": {
        // Sets the colors and styles for comments
        "comments": "#999999",
    },
    "editor.renderWhitespace": "all",
    "editor.fontSize": 14,
    "editor.lineHeight": 19,
    "editor.letterSpacing": -0,
    "editor.fontFamily": "Fira Code Medium",
    "editor.suggestFontSize": 16,
    "editor.suggestLineHeight": 28,
    "editor.renderLineHighlight": "none",
    "editor.lineNumbers": "on",
    "editor.minimap.enabled": false,
    "editor.codeLens": false,
    "editor.fontLigatures": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.lineHeight": 1.5,
    "terminal.integrated.cursorBlinking": false,
    "terminal.integrated.cursorStyle": "line",
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/dist": true
    },
    "files.exclude": {
        // Git directory
        "**/.git": true,
        // MacOS special file
        "**/.DS_Store": true,
        // Cache directory
        "**/.cache": true,
        // Node.js Modules
        "**/node_modules": true,
        // Cargo output
        "**/target": true,
    },
    "editor.suggestSelection": "first",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "editor.tabSize": 4,
    "editor.formatOnPaste": true,
    "editor.quickSuggestionsDelay": 0,
    "breadcrumbs.enabled": false,
    "workbench.iconTheme": "vscode-icon-theme",
    "workbench.productIconTheme": "fluent-icons",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "materialTheme.accent": "Pink",
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.emptyWindow": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "update.mode": "none",
    "workbench.activityBar.visible": false,
    "svg.preview.mode": "svg",
    // use system `rust-analyzer` installation
    "rust-analyzer.server.path": "/usr/bin/rust-analyzer",
    "rust-analyzer.diagnostics.disabled": [
        "unresolved-proc-macro"
    ],
    "window.menuBarVisibility": "compact",
    "svelte.enable-ts-plugin": true,
    "tabnine.experimentalAutoImports": true,
    "workbench.colorTheme": "Community Material Theme Palenight"
}
